<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:UniversityApp.ViewModels"
             x:Class="UniversityApp.Views.LoginView"
            >

    <ContentPage.BindingContext>
        <viewmodels:LoginViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <Style x:Key="errorMessage" TargetType="Label">
            <Setter Property="TextColor" Value="Red"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
        </Style>
    </ContentPage.Resources>
    
    <VerticalStackLayout Padding="10">
        <Label 
            Text="Login"
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <!--<Label Text="Name:"/>
        <Frame CornerRadius="10" Padding="3" Margin="0,10,0,15">
            <VerticalStackLayout>
                <Entry Text="{Binding loginData.name}" Placeholder="Name" FontSize="18" Margin="5,0,5,0"/>
                <Label Text="{Binding loginError.name}" Style="{StaticResource errorMessage}"/>
            </VerticalStackLayout>
        </Frame>-->

        <Label Text="Email address:"/>
        <Frame CornerRadius="10" Padding="3" Margin="0,10,0,15">
            <VerticalStackLayout>
                <Entry Text="{Binding loginData.email}" Placeholder="Email address" FontSize="18" Margin="5,0,5,0"/>
                <Label Text="{Binding loginError.email}"  Style="{StaticResource errorMessage}"/>
            </VerticalStackLayout>
        </Frame>

        <Label Text="Password:"/>
        <Frame CornerRadius="10" Padding="3" Margin="0,10,0,15">
            <VerticalStackLayout>
                <Entry Text="{Binding loginData.password}" Placeholder="Password" FontSize="18" Margin="5,0,5,0"
                       IsPassword="True"/>
                <Label Text="{Binding loginError.password}"  Style="{StaticResource errorMessage}"/>
            </VerticalStackLayout>
        </Frame>

        <!--<Label Text="Confirm Password:"/>
        <Frame CornerRadius="10" Padding="3" Margin="0,10,0,15">
            <VerticalStackLayout>
                <Entry Text="{Binding loginData.confirm_password}" Placeholder="Confirm Password:" FontSize="18" Margin="5,0,5,0"
                       IsPassword="True"/>
                <Label Text="{Binding loginError.confirm_password}"  Style="{StaticResource errorMessage}"/>
            </VerticalStackLayout>
        </Frame>-->

        <Button Text="Login" Margin="0,10,0,15" Command="{Binding loginCommand}" TextColor="White"/> 
    </VerticalStackLayout>
</ContentPage>