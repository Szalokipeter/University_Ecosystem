<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UniversityApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:UniversityApp.Views"
    xmlns:local="clr-namespace:UniversityApp"
    Shell.FlyoutBehavior="Flyout"
    >

    <ShellContent  Title="Login"
                 ContentTemplate="{DataTemplate views:LoginView}"
                 Route="login" />

    <ShellContent  Title="PersonalEvents"
                   ContentTemplate="{DataTemplate views:PersonalEventsListView}"
                   Route="PersonalEvents" />

</Shell>
