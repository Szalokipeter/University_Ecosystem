<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniMobile.Views.LoginPage"
             Title="">
    <StackLayout Padding="20" Spacing="15">
        <Image Source="logo_2.png" HeightRequest="50" HorizontalOptions="Start"></Image>
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="#E38946" TextColor="#FFF4E9"/>
        <Button x:Name="btnBiometric" Text="Login with Biometrics" Clicked="OnBiometricLoginClicked" BackgroundColor="#007269" TextColor="#FFF4E9"/>
    </StackLayout>
</ContentPage>