<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniMobile.Views.ProfilePage"
             Title="ProfilePage">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="100"></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Source="logo_2.png" Grid.Row="0" Grid.Column="0" VerticalOptions="Start" HorizontalOptions="Start" MinimumHeightRequest="50" HeightRequest="50"></Image>
            <Label VerticalOptions="Start" Text="Profile" 
            FontSize="30" 
            HorizontalOptions="Center" 
            TextColor="#E38946"
            Grid.Row="0" Grid.ColumnSpan="2"/>

            <Label Text="Username:" FontSize="24" HorizontalOptions="Center" Grid.Row="1" Grid.ColumnSpan="2" TextColor="#E38946"/>
            <Label x:Name="lblUsername" Text="UserName" FontSize="20" HorizontalOptions="Center" Grid.Row="2" Grid.ColumnSpan="2"/>
            <Label Text="Email:"
            FontSize="24" 
             HorizontalOptions="Center" Grid.Row="3" Grid.ColumnSpan="2" TextColor="#E38946"/>
            <Label x:Name="lblEmail" Text="Email"
FontSize="20" 
 HorizontalOptions="Center" Grid.Row="4" Grid.ColumnSpan="2"/>
            <Button Text="Sign Out" 
             Clicked="OnSignOutClicked" 
             HorizontalOptions="Center" 
             BackgroundColor="#E38946" TextColor="#FFF4E9" Grid.Row="5" Grid.ColumnSpan="2"/>
        </Grid>
        
    </VerticalStackLayout>
</ContentPage>